    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "Segment",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/segment.py",
            "args": ["segment",
                     "-s",
                     "20191001_1536",
                     "-e",
                     "20191001_1541"],
            "console": "integratedTerminal"
        },
        {
            "name": "Play segment movie",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/segment.py",
            "args": ["play",
                     "-v",
                     "20191001_1536"],
            "console": "integratedTerminal"
        },

        {
            "name": "PointCloud",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/pointcloud.py",
            "args": ["create",
            "-s",
            "test",
            "-f",
            "20191104_152359",
            ],
            "console": "integratedTerminal"
        },

        {
            "name": "Realsense stream",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/realsense.py",
            "args": ["stream"],
            "console": "integratedTerminal"
        },
        {
            "name": "Realsense play",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/realsense.py",
            "args": ["play",
                     "--site",
                     "test",
                     "--date",
                     "20191104_152359"],
            "console": "integratedTerminal"
        },
        {
            "name": "Realsense record",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/realsense.py",
            "args": ["record",
                     "--site",
                     "test"],
            "console": "integratedTerminal"
        }
    ]
}