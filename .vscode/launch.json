{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "type": "pickString",
            "id": "date",
            "description": "date of file",
            // "default": "20191112_142615_a"
            "options": [
                "20191112_142615_a",
                "20191121_114900"
            ]
        },
        {
            "type": "pickString",
            "id": "site",
            "description": "site of file",
            // "default": "daizawa_4"
            "options": [
                "test",
                "daizawa_4"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "segment inference",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/segment.py",
            "args": [
                "segment",
                "-s",
                "${input:site}",
                "-d",
                "${input:date}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "segment replay",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/segment.py",
            "args": [
                "replay",
                "-s",
                "${input:site}",
                "-d",
                "${input:date}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "pointcloud create",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/pointcloud.py",
            "args": [
                "create",
                "-s",
                "${input:site}",
                "-d",
                "${input:date}",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "pointcloud create all",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/pointcloud.py",
            "args": [
                "create",
                "-s",
                "${input:site}",
                "-d",
                "${input:date}",
                "--all"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "pointcloud cluster",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/pointcloud.py",
            "args":[
                "cluster",
                "-s",
                "${input:site}",
                "-d",
                "${input:date}",
                "-m",
                "dbscan",
                "--export",
            ]
        },
        {
            "name": "realsense stream",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/realsense.py",
            "args": [
                "stream"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "realsense replay",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/realsense.py",
            "args": [
                "replay",
                "--site",
                "${input:site}",
                "--date",
                "${input:date}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "realsense record",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/realsense.py",
            "args": [
                "record",
                "--site",
                "${input:site}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "route visualize",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/route.py",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "vis",
                "-s",
                "${input:site}",
                "-d",
                "${input:date}"
            ]
        },
        {
            "name": "route split",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/route.py",
            "args": [
                "split",
                "-s",
                "${input:site}",
                "-d",
                "${input:date}"
            ]
        }
    ]
}